                                                        <table id="tablaAeronaves" class="table table-bordered table-striped table-sm" style="width:100%">
                                                            <thead>
                                                                <tr class="text-center">
                                                                    <th>Mátricula</th>
                                                                    <th>Fabricante</th>
                                                                    <th>Modelo</th>
                                                                    <th>Mtow(kg)</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </td>
                                            </tr>
                                            @*3 INFORMACIÓN DEL VUELO*@
                                            <tr>
                                                <td colspan="2">
                                                    <div class="col-sm-12 text-sm align-top">
                                                        <small class="card-title text-muted"><u class="text-primary">INFORMACIÓN DEL VUELO</u></small>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="propositoVuelo" class="col-form-label">Proposito del vuelo:</label>
                                                </td>
                                                <td class="col-sm-9">
                                                    <input type="text" class="form-control form-control-sm" id="propositoVuelo" readonly>
                                                </td>
                                            </tr>
                                            <tr class="divVueloItinerario" style="display: none">
                                                <td class="col-sm-3">
                                                    <label for="vueloItinerario" class="col-form-label">Vuelo itinerario:</label>
                                                </td>
                                                <td class="col-sm-9">
                                                    <input type="text" class="form-control form-control-sm" id="vueloItinerario" readonly>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="especificarObjetoVuelo" class="col-form-label">Especificar objeto del vuelo y materia del transporte:</label>
                                                </td>
                                                <td class="col-sm-9">
                                                    <div class="form-group clearfix">
                                                        <div class="icheck-danger d-inline">
                                                            <input type="radio" name="r3" disabled class="radPropositoVuelo" checked id="radioPropositoVuelo">
                                                            <label for="radioPropositoVuelo" class="lblPropisitoVuelo"></label>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="numeroPasajeros" class="col-form-label">No. Pasajeros transportados:</label>
                                                </td>
                                                <td class="col-sm-9">  <input type="text" class="form-control form-control-sm col-sm-5 text-right" id="numeroPasajeros" readonly></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <div class="card h-100">
                                                        <table id="tablaRutaVuelos" class="table table-bordered table-striped table-sm text-center" style="width:100%">
                                                            <thead>
                                                                <tr class="text-center">
                                                                    <th>Ruta Vuelo</th>
                                                                    <th>Derechos Solicitados</th>
                                                                    <th>Fecha Ida Exacta(Sin periodos)</th>
                                                                    <th>Fecha Vuelta</th>
                                                                    <th>Hora Estimada de Vuelo</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </td>
                                            </tr>
                                            @*3 INFORMACIÓN DEL FLETADOR*@
                                            <tr class="divFletador" style="display: none">
                                                <td colspan="2">
                                                    <div class="col-sm-12 text-sm align-top">
                                                        <small class="card-title text-muted"><u class="text-primary">INFORMACIÓN DEL FLETADOR</u></small>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="divFletador" style="display: none">
                                                <td class="col-sm-3">
                                                    <label for="nombreFletador" class="col-form-label">Nombre del Fletador:</label>
                                                </td>
                                                <td class="col-sm-9"> <input type="text" class="form-control form-control-sm" id="nombreFletador" readonly></td>
                                            </tr>
                                            <tr class="divFletador" style="display: none">
                                                <td class="col-sm-3">
                                                    <label for="telefonoFletador" class="col-form-label">Teléfono:</label>
                                                </td>
                                                <td class="col-sm-9"> <input type="text" class="form-control form-control-sm" id="telefonoFletador" readonly></td>
                                            </tr>
                                            <tr class="divFletador" style="display: none">
                                                <td class="col-sm-3">
                                                    <label for="direccionFletador" class="col-form-label">Dirección:</label>
                                                </td>
                                                <td class="col-sm-9"> <input type="text" class="form-control form-control-sm" id="direccionFletador" readonly></td>
                                            </tr>
                                            <tr class="divFletador" style="display: none">
                                                <td class="col-sm-3">
                                                    <label for="emailFletador" class="col-form-label">Correo o email:</label>
                                                </td>
                                                <td class="col-sm-9">  <input type="text" class="form-control form-control-sm" id="emailFletador" readonly></td>
                                            </tr>
                                            <tr class="divFletador" style="display: none">
                                                <td class="col-sm-3">
                                                    <label for="nombreRepresentanteFletador" class="col-form-label">Nombre del representante:</label>
                                                </td>
                                                <td class="col-sm-9">  <input type="text" class="form-control form-control-sm" id="nombreRepresentanteFletador" readonly></td>
                                            </tr>
                                            @*4 INFORMACIÓN DEL FACTURA*@
                                            <tr>
                                                <td colspan="2">
                                                    <div class="col-sm-12 text-sm align-top">
                                                        <small class="card-title text-muted"><u class="text-primary">INFORMACIÓN DEL FACTURADOR</u></small>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="nombreCiaFactura" class="col-form-label">Compañia que factura:</label>
                                                </td>
                                                <td class="col-sm-9"> <input type="text" class="form-control form-control-sm" id="nombreCiaFactura" readonly></td>
                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="numeroRucFactura" class="col-form-label">Compañia que factura:</label>
                                                </td>
                                                <td class="col-sm-9"> <input type="text" class="form-control form-control-sm" id="numeroRucFactura" readonly></td>
                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="telefonoFletador" class="col-form-label">Teléfono:</label>
                                                </td>
