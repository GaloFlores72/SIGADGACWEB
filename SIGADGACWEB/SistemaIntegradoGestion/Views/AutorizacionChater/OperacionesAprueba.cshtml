                                            </tr>
                                            <tr>
                                                <td class="col-sm-3">
                                                    <label for="observacionFletador" class="col-form-label">Observación:</label>
                                                </td>
                                                <td class="col-sm-9">  <input type="text" class="form-control form-control-sm" id="observacionFactura" readonly></td>
                                            </tr>
                                            @*5 FORMA DE PAGO*@
                                            <tr>
                                                <td colspan="2">
                                                    <div class="col-sm-12 text-sm align-top">
                                                        <small class="card-title text-muted"><u class="text-primary">FORMA DE PAGO</u></small>
