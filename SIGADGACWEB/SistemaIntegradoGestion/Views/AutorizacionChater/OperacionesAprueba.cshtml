@model IEnumerable<CapaModelo.tbSolicitudVuelo>
@{
    ViewBag.Title = "OperacionesAprueba";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="card" style="font-size:12px">
    <div class="card-header">
        <table style="width:100%">
            <tr>
                <td class="text-center text-blue">
                    <h6>DIRECCIÓN DE TRANSPORTE AÉREO</h6>
                </td>
            </tr>
            <tr>
                <td class="text-center text-blue">
                    <h6>GESTIÓN INTERNA DE OPERACIONES</h6>
                </td>
            </tr>
            <tr>
                <td class="text-center text-blue">
                    <h6>AUTORIZACIÓN DE LA SOLICITUD DE VUELOS CHARTER O ESPECIALES</h6>
                </td>
            </tr>

        </table>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <input type="hidden" id="pvista" name="pvista" value="@ViewBag.Vista" />
        <table id="tbDetalleCharter" class="table table-bordered table-hover table-sm" style="width:100%; font-size:x-small">
            <thead class="text-center">
                <tr>
                    <th>No. SOL.</th>
                    <th>FECHA SOLICITUD</th>
                    <th>FECHA APROBACION </th>
                    <th>OPERACIÓN </th>
                    <th>ESTADO SOLICITUD</th>
                    <th>CIA. OPERADORA</th>
                    <th>No PERMISO </th>
                    <th>APROB. OPERACIONES</th>
                    <th>APROB. FINANCIERO</th>
                    <th>APROB. TRANSP. AEREO</th>
                    <th>IMPRIMIR</th>
                    <th>CONSULTAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NumeroSolicitud)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.FechaEnvioSolicitud)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.FechaTransporteAereo)</td>
                        <td class="text-justify">@Html.DisplayFor(modelItem => item.DescripcionTipoSolictud)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.EstadoSolicitud)</td>
                        <td class="text-justify">@Html.DisplayFor(modelItem => item.NombreCompaniaAviacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.AutorizacionSolicitudVuelo)</td>
                        <td>
                            @if (item.EstadoOperacionesDSOP.Equals(""))
                            {
                                <a href='#' onclick='abrirPopUpForm(@item.NumeroSolicitud)'><b style='color:#ff0000'><img src='../Content/imganes/menos.png' style='width:20px;' /> <u> PENDIENTE</u></b></a>
                            }
                            else if (item.EstadoOperacionesDSOP.Equals("NE"))
                            {
                                <strong><img src='../Content/imganes/cancel.png' style='width:20px;' /> @item.DescripcionOperacionesDSOP </strong>
                            }
                            else if (item.EstadoOperacionesDSOP.Equals("AP"))
                            {
                                <strong><img src='../Content/imganes/check.png' style='width:20px;' /> @item.DescripcionOperacionesDSOP</strong>
                            }
                            else if (item.EstadoOperacionesDSOP.Equals(""))
                            {
                                <strong><img src='../Content/imganes/button-minus.png' style='width:20px;' /> PENDIENTE </strong>
                            }


                        </td>
                        <td class="text-center">
                            @if (item.EstadoFinanciero.Equals("AP"))
                            {
                                <strong><img src='../Content/imganes/check.png' style='width:20px;' /> @item.DescripcionEstadoFinanciero.Trim() </strong>
                            }
                            else if (item.EstadoFinanciero.Equals("NE"))
                            {
                                <strong><img src='../Content/imganes/cancel.png' style='width:20px;' /> @item.DescripcionEstadoFinanciero.Trim() </strong>
                            }
                            else if (item.EstadoFinanciero.Equals(""))
                            {
                                <strong><img src='../Content/imganes/button-minus.png' style='width:20px;' /> PENDIENTE </strong>
                            }

                        </td>
                        <td class="text-center">
                            @if (item.EstadoTransporteAereo.Equals("AP"))
                            {
                                <strong><img src='../Content/imganes/check.png' style='width:20px;' /> @item.DescripcionEstadoTransporteAereo.Trim() </strong>
                            }
                            else if (item.EstadoTransporteAereo.Equals("NE"))
                            {
                                <strong><img src='../Content/imganes/cancel.png' style='width:20px;' /> @item.DescripcionEstadoTransporteAereo</strong>
                            }
                            else if (item.EstadoTransporteAereo.Equals(""))
                            {
                                <strong><img src='../Content/imganes/button-minus.png' style='width:20px;' /> PENDIENTE </strong>
                            }

                        </td>
                        <td class="text-center">
                            @if (item.EstadoResponsableATO != "" && item.AutorizacionSolicitudVuelo.Trim().Length > 0)
                            {
                                <a id='imprimir' href='#' onclick='imprimir("@item.AutorizacionSolicitudVuelo")'><img src='../Content/imganes/printer.png' style='width:20px' /></a>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.FormaPago.Equals("C"))
                            {
                                <a id="consultar" href="@Url.Action("Consulta", "Charter",  new {id= item.NumeroSolicitud, vista=@ViewBag.Vista })"> <i class="ti-pencil-alt"> <img src="../Content/imganes/consultar-documento.png" style="width: 20px" /></i></a>
                            }
                            else
                            {
                                <a id="consultar" href="@Url.Action("SolicitudVuelo", "Charter",  new {id= item.NumeroSolicitud, vista=@ViewBag.Vista })"> <i class="ti-pencil-alt"> <img src="../Content/imganes/consultar-documento.png" style="width: 20px" /></i></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<!-- Modal -->
