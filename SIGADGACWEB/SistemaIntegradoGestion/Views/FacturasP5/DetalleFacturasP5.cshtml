
@model CapaModelo.tbFacturasP5
@{
    ViewBag.Title = "DetalleFacturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /*Here We will add some css for style our treeview*/
    .collapse {
        width: 15px;
        background-image: url('../Images/ui-icons_454545_256x240.png');
        background-repeat: no-repeat;
        background-position: -36px -17px;
        display: inline-block;
        cursor: pointer;
    }

    .expand {
        width: 15px;
        background-image: url('../Images/ui-icons_454545_256x240.png');
        background-repeat: no-repeat;
        background-position: -50px -17px;
        display: inline-block;
        cursor: pointer;
    }

    .treeview ul {
        font: 14px Arial, Sans-Serif;
        margin: 0px;
        padding-left: 20px;
        list-style: none;
    }

    .treeview > li > a {
        font-weight: bold;
    }

    .treeview li {
    }

        .treeview li a {
            padding: 4px;
            font-size: 12px;
            display: inline-block;
            text-decoration: none;
            width: auto;
        }


    p {
        color: blue;
        text-align: center;
    }

</style>

<div class="container-fluid">

    <div class="card-header card-header-stretch">
        <div class="card-title d-flex align-items-center">
            <div class="row">
                <div class="col-md-9">
                    <h3 class="fw-bolder m-0 text-gray-800">
                       Detalle Facturas 
                    </h3>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-success" href="ListadoFacturasP5">Listado Facturas</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="card-body border-top p-9">

            <div class="row mb-8">
                <div class="col-sm-3">
                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Compañia</label></div>
                </div>
                <div class="col-sm-8 fv-row">
                    <input class="form-control form-control-solid" value="@Model.NOMBRECLIENTE" readonly="readonly" />
                </div>
            </div>
            <div class="row mb-8">
                <div class="col-sm-3">
                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Cedula Ruc</label></div>
                </div>
                <div class="col-sm-8 fv-row">
                    <input class="form-control form-control-solid" value="@Model.CEDULA_RUC" readonly="readonly" />
                </div>
            </div>

            <div class="row mb-8">
                <div class="col-sm-3">
                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Estado</label></div>
                </div>
                <div class="col-sm-8 fv-row">
                    <input class="form-control form-control-solid" value="@Model.ESTADO" readonly="readonly" />
                </div>
            </div>

            <div class="row mb-8">
                <div class="col-sm-3">
                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Codigo Recaudacion</label></div>
                </div>
                <div class="col-sm-8 fv-row">
                    <input class="form-control form-control-solid" value="@Model.CODIGO" readonly="readonly" />
                </div>
            </div>

            <div class="row mb-8">
                <div class="col-sm-3">
                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Valor Factura</label></div>
                </div>
                <div class="col-sm-8 fv-row">
                    <input class="form-control form-control-solid" value="@Model.VALORFACTURA" readonly="readonly" />
                </div>
            </div>

            <hr />

            <h4>

                <p>DETALLE FACTURA</p>
            </h4>


            <table id="tbDetalleFactura" class="table table-bordered table-hover table-sm" style="width:100%">
                <thead>
                    <tr>
                        <th>CODIGO CONTABLE</th>
                        <th>CONCEPTO</th>
                        <th>VALOR</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var ItemDetalle in Model.oDetalleFactura)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => ItemDetalle.CODIGOCONTABLE)</td>
                            <td>@Html.DisplayFor(modelItem => ItemDetalle.DESCRIPCION)</td>
                            <td>@Html.DisplayFor(modelItem => ItemDetalle.VALOR)</td>

                        </tr>
                    }
                </tbody>
            </table>


        </div>

    </div>

  
    <br />

</div>

@section scripts{
    <script>
        $(document).ready(function () {

        })

    </script>
}

